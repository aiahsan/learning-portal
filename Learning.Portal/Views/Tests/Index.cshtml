@model IEnumerable<Test>

@{
    ViewData["Title"] = "Tests";
}

<section class="content-header">
    <h1>
        Manage Tests
        <small>list view</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Manage Tests</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Tests</h3>

                    <a asp-action="Create" class="btn btn-primary pull-right">Create</a>
                    <div class="clearfix"></div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="table" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                <th>@Html.DisplayNameFor(model => model.Title)</th>
                                <th>@Html.DisplayNameFor(model => model.Topic.Class)</th>
                                <th>@Html.DisplayNameFor(model => model.Topic.Subject)</th>
                                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                                <th>Questions</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.Topic.Class.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.Topic.Subject.Title)</td>
                                <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>@Html.DisplayFor(modelItem => item.TestQuestions.Count)</td>
                                <td>
                                    <a asp-action="ViewTest" class="btn btn-success" asp-route-id="@item.Id">Details</a>
                                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>
<script>
    $(function () {
        $('#table').DataTable({
            'paging': true,
            'lengthChange': true,
            'searching': true,
            'ordering': true,
            'info': true,
            'autoWidth': false
        });
    });
</script>