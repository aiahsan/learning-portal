@model TopicVM

@{
    ViewData["Title"] = "Create";
}
<section class="content-header">
    <h1>
        Create Topic
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/Topics/Index"><i class="fa fa-users"></i> Manage Topics</a></li>
        <li class="active">Create Topic</li>
    </ol>
</section>
<section class="content">

    <div class="row">
        <div class="col-md-12">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Topic Info</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Subject" class="control-label"></label>
                            <select asp-for="Subject" asp-items="@ViewData["Subjects"] as List<SelectListItem>" class="selectpicker form-control" data-live-search="true">
                            </select>
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Class" class="control-label"></label>
                            <select asp-for="Class" asp-items="@ViewData["Classes"] as List<SelectListItem>" class="selectpicker form-control" data-live-search="true">
                            </select>
                            <span asp-validation-for="Class" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </form>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</section>

