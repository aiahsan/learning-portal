@model TopicVM

@{
    ViewData["Title"] = "User Info";
}
<section class="content-header">
    <h1>
        Topic Info
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/Topics/Index"><i class="fa fa-users"></i> Manage Topics</a></li>
        <li class="active">Topic Info</li>
    </ol>
</section>
<section class="content">

    <div class="row">
        <div class="col-md-12">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Topic Info</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input disabled value="@Model.Name" asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input disabled value="@Model.Description" asp-for="Description" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Class</label>
                        <input disabled value="@Model.ClassName" asp-for="ClassName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Subject</label>
                        <input disabled value="@Model.SubjectName" asp-for="SubjectName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Questions Count</label>
                        <input disabled value="@Model.QuestionsCount" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Created At</label>
                        <input disabled value="@Model.CreatedAt" asp-for="CreatedAt" class="form-control" />
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</section>

