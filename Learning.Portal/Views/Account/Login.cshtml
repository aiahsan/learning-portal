@model LoginVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <!-- Basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Login | Kazzats</title>

    <meta name="keywords" content="HTML5 Template" />
    <meta name="description" content="Porto - Responsive HTML5 Template">
    <meta name="author" content="okler.net">

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/img/Kazzats_FaviIcon.png" type="image/x-icon" />
    <link rel="apple-touch-icon" href="~/img/apple-touch-icon.png">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, shrink-to-fit=no">

    <!-- Web Fonts  -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800%7CShadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->          
    <link rel="stylesheet" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/vendor/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/vendor/animate/animate.min.css">
    <link rel="stylesheet" href="~/vendor/simple-line-icons/css/simple-line-icons.min.css">
    <link rel="stylesheet" href="~/vendor/owl.carousel/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/vendor/owl.carousel/assets/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/vendor/magnific-popup/magnific-popup.min.css">

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/css/theme.css">
    <link rel="stylesheet" href="~/css/theme-elements.css">
    <link rel="stylesheet" href="~/css/theme-blog.css">
    <link rel="stylesheet" href="~/css/theme-shop.css">

    <!-- Current Page CSS -->
    <link rel="stylesheet" href="~/vendor/rs-plugin/css/settings.css">
    <link rel="stylesheet" href="~/vendor/rs-plugin/css/layers.css">
    <link rel="stylesheet" href="~/vendor/rs-plugin/css/navigation.css">
    <link rel="stylesheet" href="~/vendor/circle-flip-slideshow/css/component.css">

    <!-- Demo CSS -->
    <!-- Skin CSS -->
    <link rel="stylesheet" href="~/css/skins/default.css">
    <script src="~/master/style-switcher/style.switcher.localstorage.js"></script>

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/css/custom.css">

    <!-- Head Libs -->
    <script src="~/vendor/modernizr/modernizr.min.js"></script>

</head>
<body class="one-page" data-target="#header" data-spy="scroll" data-offset="100">

    <div class="body">

        <!--  ===============  Tope Bar and Navbar  ===============  -->

        <header id="header" class="header-effect-shrink" data-plugin-options="{'stickyEnabled': true, 'stickyEffect': 'shrink', 'stickyEnableOnBoxed': true, 'stickyEnableOnMobile': true, 'stickyChangeLogo': true, 'stickyStartAt': 120, 'stickyHeaderContainerHeight': 70}">
            <div class="header-body border-top-0">
                <div class="header-top">
                    <div class="container">
                        <div class="header-row py-2">
                            <div class="header-column justify-content-end">
                                <div class="header-row">
                                    <ul class="header-social-icons social-icons d-none d-sm-block social-icons-clean">
                                        <li class="social-icons-facebook"><a href="https://www.facebook.com/kazzats/" target="_blank" title="Facebook"><i class="fab fa-facebook-f"></i></a></li>
                                        <li class="social-icons-twitter"><a href="https://www.twitter.com/kazzats/" target="_blank" title="Twitter"><i class="fab fa-twitter"></i></a></li>
                                        <li class="social-icons-linkedin"><a href="https://www.linkedin.com/in/kazzats/" target="_blank" title="Linkedin"><i class="fab fa-linkedin-in"></i></a></li>
                                        <li class="social-icons-instagram"><a href="https://www.instagram.com/kazzats_core_learning_skills/" target="_blank" title="Instagram"><i class="fab fa-instagram"></i></a></li>
                                        <li class="social-icons-youtube"><a href="https://www.youtube.com/channel/UCqM8Jx_jwmEWq1YZYw-S8qQ" target="_blank" title="Youtube"><i class="fab fa-youtube"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="header-container container">
                    <div class="header-row">
                        <div class="header-column">
                            <div class="header-row">
                                <div class="header-logo">
                                    <a href="/Home/Index">
                                        <img alt="Porto" width="150" height="52" data-sticky-width="114" data-sticky-height="40" src="~/img/110x40.png">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="header-column justify-content-end">
                            <div class="header-row">
                                <div class="header-nav header-nav-line header-nav-top-line header-nav-top-line-with-border order-2 order-lg-1">
                                    <div class="header-nav-main header-nav-main-square header-nav-main-effect-2 header-nav-main-sub-effect-1">
                                        <nav class="collapse">
                                            <ul class="nav nav-pills" id="mainNav">
                                                <li>
                                                    <a class="dropdown-item active" href="/Home/Index">Home</a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" data-hash data-hash-offset="68" href="/Home/Portfolio">Portfolio</a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" data-hash data-hash-offset="68" href="/Home/Index#news">News</a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" data-hash data-hash-offset="68" href="/Home/Index#videos">Videos</a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" data-hash data-hash-offset="68" href="/Home/Index#about">About Us</a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" data-hash data-hash-offset="68" href="/Home/Index#footer">Contact Us</a>
                                                </li>
                                                @if (string.IsNullOrWhiteSpace((string)ViewData["user"]))
                                                {
                                                <li>
                                                    <a class="dropdown-item active" data-hash data-hash-offset="68" href="/Account/Login">Login/Register</a>
                                                </li>
                                                }
                                                else
                                                {
                                                <li>
                                                    <a class="dropdown-item" data-hash data-hash-offset="68" href="/Home/Portal">Portal</a>
                                                </li>
                                                }
                                            </ul>
                                        </nav>
                                    </div>
                                    <button class="btn header-btn-collapse-nav" data-toggle="collapse" data-target=".header-nav-main nav">
                                        <i class="fas fa-bars"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div role="main" class="main">
            <section class="page-header page-header-classic">
                <div class="container">
                    <div class="row">
                        <div class="col p-static">
                            <h1 data-title-border>Login</h1>
                        </div>
                    </div>
                </div>
            </section>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="featured-boxes">
                            <div class="row">
                                <div class="col-md-6 offset-md-3">
                                    <div class="featured-box featured-box-primary text-left mt-5">
                                        <div class="box-content">
                                            <h4 class="color-primary font-weight-semibold text-4 text-uppercase mb-3">Login Account</h4>
                                            <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl" class="needs-validation">

                                                <div class="form-row">
                                                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-group col">
                                                        <label class="font-weight-bold text-dark text-2">Username</label>
                                                        <input type="text" asp-for="Username" class="form-control form-control-lg" placeholder="Username" required="required">
                                                        <span asp-validation-for="Username"></span>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-group col">
                                                        <label class="font-weight-bold text-dark text-2">Password</label>
                                                        <input type="password" asp-for="Password" class="form-control" placeholder="Password" required="required">
                                                        <span asp-validation-for="Password"></span>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-group col-md-3">
                                                        <div class="custom-control custom-checkbox">
                                                            <input type="checkbox" class="custom-control-input" id="rememberme">
                                                            <label class="custom-control-label text-2" for="rememberme">Remember Me</label>
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-md-4">
                                                        <input type="submit" value="Login" class="btn btn-primary btn-modern float-right" data-loading-text="Loading...">
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--  ===============  Footer  ===============  -->
        <footer id="footer" class="mt-0">
            <div class="container">
                <div class="footer-ribbon"> <span>Get in Touch</span> </div>
                <div class="row py-2 my-4">
                    <div class="col-md-4 mb-4 mb-lg-0">
                        <h5 class="text-3 mb-3">Kazzats Education Services</h5>
                        <p class="pr-1">
                            Kazzats Education Services provide professional educational services.
                        </p>
                    </div>
                    <div class="col-md-4 mb-4 mb-md-0">
                        <div class="contact-details">
                            <h5 class="text-3 mb-3">CONTACT US</h5>
                            <ul class="list list-icons list-icons-lg">
                                <li class="mb-1">
                                    <i class="far fa-dot-circle text-color-primary"></i>
                                    <p class="m-0">Address: Islamabad, Pakistan</p>
                                </li>
                                <li class="mb-1">
                                    <i class="fab fa-whatsapp text-color-primary"></i>
                                    <p class="m-0"><a href="tel:8001234567">+92 (51) 8732432 & +92 (333) 543 9003</a></p>
                                </li>
                                <li class="mb-1">
                                    <i class="far fa-envelope text-color-primary"></i>
                                    <p class="m-0">
                                        <a href="mailto:info@senvsolutions.org">info@kazzats.com</a> & <a href="mailto:contact@senvsolutions.org">contact@kazzats.com</a>
                                    </p>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-2">
                        <h5 class="text-3 mb-3">FOLLOW US</h5>
                        <ul class="social-icons">
                            <li class="social-icons-facebook"><a style="color:white !important;" href="https://www.facebook.com/kazzats/" target="_blank" title="Facebook"><i class="fab fa-facebook-f"></i></a></li>
                            <li class="social-icons-twitter"><a style="color:white !important;" href="https://www.twitter.com/kazzats/" target="_blank" title="Twitter"><i class="fab fa-twitter"></i></a></li>
                            <li class="social-icons-linkedin"><a style="color:white !important;" href="https://www.linkedin.com/in/kazzats/" target="_blank" title="Linkedin"><i class="fab fa-linkedin-in"></i></a></li>
                            <li class="social-icons-instagram"><a style="color:white !important;" href="https://www.instagram.com/kazzats_core_learning_skills/" target="_blank" title="Instagram"><i class="fab fa-instagram"></i></a></li>
                            <li class="social-icons-youtube"><a style="color:white !important;" href="https://www.youtube.com/channel/UCqM8Jx_jwmEWq1YZYw-S8qQ" target="_blank" title="Youtube"><i class="fab fa-youtube"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer-copyright">
                <div class="container py-2">
                    <div class="row py-4">
                        <div class="col-lg-1 d-flex align-items-center justify-content-center justify-content-lg-start mb-2 mb-lg-0">
                            <a href="/Home/Index" class="logo pr-0 pr-lg-3">
                                <img alt="Porto Website Template" src="~/img/Kazzats_FaviIcon.png" height="33">
                            </a>
                        </div>
                        <div class="col-lg-7 d-flex align-items-center justify-content-center justify-content-lg-start mb-4 mb-lg-0">
                            <p>© Copyright 2020. All Rights Reserved.</p>
                        </div>
                        <div class="col-lg-4 d-flex align-items-center justify-content-center justify-content-lg-end">
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- Vendor -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/jquery.appear/jquery.appear.min.js"></script>
    <script src="~/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/vendor/jquery.cookie/jquery.cookie.min.js"></script>
    <script src="~/master/style-switcher/style.switcher.js" id="styleSwitcherScript" data-base-path=""
            data-skin-src=""></script>
    <script src="~/vendor/popper/umd/popper.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/vendor/common/common.min.js"></script>
    <script src="~/vendor/jquery.validation/jquery.validate.min.js"></script>
    <script src="~/vendor/jquery.easy-pie-chart/jquery.easypiechart.min.js"></script>
    <script src="~/vendor/jquery.gmap/jquery.gmap.min.js"></script>
    <script src="~/vendor/jquery.lazyload/jquery.lazyload.min.js"></script>
    <script src="~/vendor/isotope/jquery.isotope.min.js"></script>
    <script src="~/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>
    <script src="~/vendor/vide/jquery.vide.min.js"></script>
    <script src="~/vendor/vivus/vivus.min.js"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="~/js/theme.js"></script>

    <!-- Current Page Vendor and Views -->
    <script src="~/vendor/rs-plugin/js/jquery.themepunch.tools.min.js"></script>
    <script src="~/vendor/rs-plugin/js/jquery.themepunch.revolution.min.js"></script>
    <script src="~/vendor/circle-flip-slideshow/js/jquery.flipshow.min.js"></script>
    <script src="~/js/views/view.home.js"></script>

    <!-- Theme Initialization Files -->
    <script src="~/js/theme.init.js"></script>

</body>
</html>