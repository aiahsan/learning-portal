@model AssignClass

@{ ViewData["Title"] = "Assign Classes"; }


<section class="content-header">
    <h1>
        Create Topic
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/Topics/Index"><i class="fa fa-users"></i> Manage Assign Classes</a></li>
        <li class="active">Create Topic</li>
    </ol>
</section>
<section class="content">

    <div class="row">
        <div class="col-md-12">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Topic Info</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>



                        <div class="form-group">

                            <label asp-for="UserId" class="control-label"></label>
                            <select asp-for="UserId" asp-items="@(new SelectList(ViewBag.users,"Id", "FirstName"))" class="selectpicker form-control" data-live-search="true">
                            </select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ClassId" class="control-label"></label>
                            <select asp-for="ClassId" asp-items="@(new SelectList(ViewBag.Classes,"Id", "Title"))" class="selectpicker form-control" data-live-search="true">
                            </select>
                            <span asp-validation-for="ClassId" class="text-danger"></span>
                        </div>




                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </form>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</section>

