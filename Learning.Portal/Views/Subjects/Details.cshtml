@model SubjectVM

@{
    ViewData["Title"] = "Subject Info";
}
<section class="content-header">
    <h1>
        Subject Info
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/Subjects/Index"><i class="fa fa-users"></i> Manage Subjects</a></li>
        <li class="active">Subject Info</li>
    </ol>
</section>
<section class="content">

    <div class="row">
        <div class="col-md-12">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Subject Info</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input disabled value="@Model.Title" asp-for="Title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input disabled value="@Model.Description" asp-for="Description" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Topics Count</label>
                        <input disabled value="@Model.TopicsCount" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Created At</label>
                        <input disabled value="@Model.CreatedAt" asp-for="CreatedAt" class="form-control" />
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</section>

